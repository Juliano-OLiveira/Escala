public static void testeAlisson() throws ParseException {
        // Inserindo escala
        String sData[] = txtData.getText().split("/");
        String sDataFinal[] = txtFinal.getText().split("/");
        
        int ano = Integer.parseInt(sData[2]);
        //Subtrai 1 porque os meses iniciam com 0-janeiro e 11-Dezembro
        int mes = Integer.parseInt(sData[1]) - 1;
        dia = Integer.parseInt(sData[0]) - 1;
        diaFinal = Integer.parseInt(sDataFinal[0]);
        subt = diaFinal - dia;

        cal = Calendar.getInstance();
        cal.set(ano, mes, dia);
        
            // Período matutino
            for (int i = 0; i < subt; i++) {
                // Buscando funcionários
                List<Funcionario> funcionarios = read();

                // Embaralhando a listagem
                Collections.shuffle(funcionarios);
        
                cal.add(Calendar.DATE, 1);

                SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");

                Random random = new Random();
                int intervalo_randomico = random.nextInt(funcionarios.size());

                try{
                    Funcionario func = funcionarios.get(intervalo_randomico);
                    
                    // Verificando se já está escalado nos últimos 5 dias
                    String searchSql = "SELECT * FROM escala WHERE funcionario = ? AND data between CURRENT_DATE()-5 AND ?";
                    java.util.Date finalUtil = cal.getTime();
                    java.sql.Date finalSql = new java.sql.Date(finalUtil.getTime());
                    pst = ConexaoBD.Conexao.getC().prepareStatement(searchSql);
                    pst.setInt(1, func.id);
                    pst.setDate(2, finalSql);

                    ResultSet rs = pst.executeQuery();
                    
                    //contador de registros encontrados:
                    int Contador = 0;
                    while(rs.next()){										                                   //mesmo usando um select *, nesse ponto defino que quero usar	
                        Contador ++;
                    }
                    
                    if(Contador == 0){
                        pst.close();
                    
                        String insertSql = "insert into escala (idEscala, data, turno, funcionario) values (default,?,?,?)";
                        pst = ConexaoBD.Conexao.getC().prepareStatement(insertSql);

                        java.util.Date dataUtil = cal.getTime();
                        java.sql.Date dataSql = new java.sql.Date(dataUtil.getTime());

                        pst.setDate(1, dataSql);
                        pst.setString(2, "matutino");
                        pst.setInt(3, func.id);
                        pst.execute();
                        pst.close();
                    }else{
                        System.out.println("Repetiu funcionário!");
                    }
                    
                    DisplayQueryResults.atualizarTableModel();
                } catch (Exception ex) {
                    System.out.println(ex.getMessage());
                }
            } // Percorrendo os dias
        // JOptionPane.showMessageDialog(null, "O teste funcionou!", "Aviso", JOptionPane.WARNING_MESSAGE);
    }
